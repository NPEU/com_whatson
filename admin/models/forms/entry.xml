<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_whatson/models/rules"
    addfieldpath="/administrator/components/com_whatson/models/fields"
>
    <fieldset
        name="main"
        label="COM_WHATSON_FIELDSET_MAIN_LABEL"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="title"
            type="text"
            size="30"
            label="COM_WHATSON_TITLE_LABEL"
            description="COM_WHATSON_TITLE_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_WHATSON_ALIAS_LABEL"
            description="COM_WHATSON_ALIAS_DESC"
            hint="COM_WHATSON_ALIAS_HINT"
            filter="string"
            class=""
            labelclass=""
        />
            <field
            name="owner_user_id"
            type="user"
            label="COM_WHATSON_OWNER_LABEL"
            description="COM_WHATSON_OWNER_DESC"
            default="COM_WHATSON_OWNER_DEFAULT"
            filter="int"
            class="inputbox"
            required="true"
        >
            <option value="">COM_WHATSON_OWNER_DEFAULT</option>
        </field>
        <!-- Delete if not using categories: -->
        <field
            name="catid"
            type="category"
            extension="com_whatson"
            class="inputbox"
            default=""
            label="COM_WHATSON_CATEGORY_LABEL"
            description="COM_WHATSON_CATEGORY_DESC"
            required="true"
            >
             <option value="0">JOPTION_SELECT_CATEGORY</option>
        </field>
        <field name="state" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
</form>
